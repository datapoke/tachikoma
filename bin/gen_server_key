#!perl
# ----------------------------------------------------------------------
# gen_server_key
# ----------------------------------------------------------------------
#
# $Id: gen_server_key 34842 2018-09-03 21:43:14Z chris $
#
use strict;
use warnings;
use Crypt::OpenSSL::RSA;
use Sys::Hostname;

umask(0077);

my $home        = ( getpwuid($<) )[7];
my $hostname    = hostname();
my $id          = "tachikoma\@$hostname";
my $id_file     = $ARGV[0] || "$home/.tachikoma/id";
my $force       = $ARGV[1];
my $rsa         = generate_key Crypt::OpenSSL::RSA(4096);
my $private_key = $rsa->get_private_key_string();
my $public_key  = $rsa->get_public_key_string();
die "$id_file exists!" if ( -e $id_file and not $force );
open( FH, ">$id_file" ) or die "couldn't open $id_file: $!";
print FH <<EOF;
#!/usr/bin/perl
# ----------------------------------------------------------------------
# \$Id\$
# ----------------------------------------------------------------------

use strict;
use warnings;
use Tachikoma::Config qw( \$ID \$Private_Key \%Keys );

# Set our ID
\$ID = '$id';

# Set your unencrypted private key here
\$Private_Key = q($private_key);

\$Keys{\$ID} = {
    allow => {map {\$_=>1} qw(
        command
        client
        server
    )},
    # allow_commands => {map {\$_=>1} qw(
    #     connect_node
    # )},
    public_key =>
q($public_key)};

1;
EOF

print $public_key;

1;
