#!perl
# ----------------------------------------------------------------------
# set_tachikoma_hz
# ----------------------------------------------------------------------
#
# $Id$
#
use strict;
use warnings;
use Tachikoma;

my $config_file = '/usr/local/etc/tachikoma.conf';
my $config = Tachikoma->configuration;
$config->load_config_file($config_file);
$config->load_legacy;

my $hz      = $ARGV[0];
my $home    = $config->home || ( getpwuid $< )[7];
my $hz_file = "$home/.tachikoma/hz";
die 'invalid hz setting' if ( length $hz and $hz !~ m{^\d+$} );
$hz //= 'undef';
open my $fh, '>', $hz_file or die "couldn't open $hz_file: $!";
print {$fh} <<"EOF";
#!/usr/bin/perl
# ----------------------------------------------------------------------
# \$Id\$
# ----------------------------------------------------------------------

use strict;
use warnings;
use Tachikoma;

# Set our Hz
Tachikoma->configuration->hz($hz);

eval q(
    use Tachikoma::Config qw( \%Tachikoma );
    \$Tachikoma{Hz} = $hz;
);

1;
EOF
close $fh or die "couldn't close $hz_file: $!";

my $pid = Tachikoma->get_pid('tachikoma-server');
kill 'HUP', $pid or die "couldn't HUP $pid: $!" if ($pid);

1;
