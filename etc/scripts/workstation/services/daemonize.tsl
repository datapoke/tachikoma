#!/usr/bin/env /usr/local/bin/tachikoma
include services/config.tsl

var log_file  = /var/log/tachikoma/<name>.log
var pid_file  = /var/run/tachikoma/<name>.pid
var root_port = [var "tachikoma.<name>.port"]

daemonize [var name]

make_node CommandInterpreter hosts
make_node JobController      jobs
command hosts connect_inet localhost
command jobs  start_job Tail local_server_log <log_file>
connect_node local_server_log localhost/server_log:ruleset
