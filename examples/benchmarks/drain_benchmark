#!/usr/bin/env perl
use strict;
use warnings;
use Tachikoma;
use Tachikoma::Message qw( TM_BYTESTREAM TM_PING );
use Socket qw( SOL_SOCKET SO_SNDBUF SO_RCVBUF SO_SNDLOWAT SO_KEEPALIVE );
use Time::HiRes qw( time );

my $home = ( getpwuid $< )[7];
Tachikoma->configuration->load_config_file(
    "$home/.tachikoma/etc/tachikoma.conf",
    '/usr/local/etc/tachikoma.conf',
);

my $tachikoma = Tachikoma->inet_client( 'localhost', $ARGV[0] || 5001 );
my $recv      = 0;
my $count     = 0;
my $then      = time;
my $delay     = $ARGV[1] || 2;
my $total     = 10000;
my $size;

# $tachikoma->timeout(undef);
$tachikoma->callback(
    sub {
        my $message = shift;
        if ( $recv++ >= $total ) {
            my $span = time - $then;
            $count  += $recv;
            if ( $span >= $delay ) {
                if ( not $size ) {
                    $size = $message->size;
                    print "size: $size\n";
                }
                printf
                    "%.2f MB per second - %.2f messages per second\n",
                    $count * $size / 1024 / 1024 / $span,
                    $count / $span;
                $count = 0;
                $then  = time;
            }
            $recv = 0;
        }
        $tachikoma->cancel($message);
        return 1;
    }
);

my $message = Tachikoma::Message->new;
$message->type(TM_PING);
$message->payload($Tachikoma::Right_Now);
$tachikoma->fill($message);
$tachikoma->drain;
